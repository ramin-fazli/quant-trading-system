# Trading System Environment Configuration Template
# Copy this file to .env in your VM and fill in your actual values

# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# ==============================================
# INFLUXDB CONFIGURATION
# ==============================================
INFLUXDB_URL=https://your-influxdb-url.com
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=your-org
INFLUXDB_BUCKET=trading-data

# ==============================================
# METATRADER 5 CONFIGURATION
# ==============================================
MT5_LOGIN=your-mt5-login
MT5_PASSWORD=your-mt5-password
MT5_SERVER=your-mt5-server

# ==============================================
# CTRADER CONFIGURATION
# ==============================================
CTRADER_CLIENT_ID=your-ctrader-client-id
CTRADER_CLIENT_SECRET=your-ctrader-client-secret
CTRADER_ACCESS_TOKEN=your-ctrader-access-token

# ==============================================
# TELEGRAM NOTIFICATIONS
# ==============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=sqlite:///data/trading_system.db

# ==============================================
# TRADING CONFIGURATION
# ==============================================
DEFAULT_RISK_PERCENT=0.02
MAX_POSITIONS=10
ENABLE_PAPER_TRADING=false

# ==============================================
# API CONFIGURATION
# ==============================================
API_HOST=0.0.0.0
API_PORT=8080
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050

# ==============================================
# SECURITY
# ==============================================
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# ==============================================
# MONITORING
# ==============================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ==============================================
# PERFORMANCE
# ==============================================
WORKER_THREADS=4
MAX_MEMORY_MB=3072

# ==============================================
# TIMEZONE
# ==============================================
TZ=Europe/London
