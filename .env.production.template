INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your-influxdb-token-here
INFLUXDB_ORG=trading-org
INFLUXDB_BUCKET=trading-data
INFLUXDB_ADMIN_USERNAME=admin
INFLUXDB_ADMIN_PASSWORD=change-this-password

# CTrader Configuration
CTRADER_API_KEY=your-ctrader-api-key-here
CTRADER_ACCOUNT_ID=your-ctrader-account-id-here
CTRADER_BASE_URL=https://api.ctrader.com

# MT5 Configuration
